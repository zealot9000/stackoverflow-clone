.question
  = render @question

.answers
  = render @question.answers

- if user_signed_in?
  = form_for [@question, @question.answers.build], remote: true do |f|
    - if @answer
      = render 'common/errors', resource: @answer
    .answer-errors
    = f.text_area :body
    p Attachments:
    p
      = f.fields_for :attachments do |a|
        = a.label :file
        = a.file_field :file

    p = f.submit 'Add new answer'


= link_to 'Back', questions_path
